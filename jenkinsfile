pipeline {
    agent any
    stages {
        stage('Install Nginx') {
            steps {
                script {
                    try {
                        sh '''
                            #!/bin/bash
			    sudo apt get update
			    sudo apt install nginx
                        '''
                    } catch (Exception e) {
                        error "Docker installation failed: ${e.message}"
                    }
                }
            }
        }
    }
    post {
        success {
            echo 'Docker has been successfully installed on the server.'
        }
        failure {
            echo 'Failed to install Docker. Please check the logs for details.'
        }
    }
}
